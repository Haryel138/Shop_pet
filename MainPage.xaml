<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjetoElemento.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <StackLayout Margin="40">
            <VerticalStackLayout>
                <Label Text="Nome:" />
                <Entry x:Name="nome" Placeholder="Digite seu nome" />

                <Label Text="CPF:" />
                <Entry x:Name="cpf" Placeholder="Digite seu Cpf" />

                <Label Text="Endereço:" />
                <Entry x:Name="endereco" Placeholder="Digite seu endereço" />

                <Label Text="Senha:" />
                <Entry
                    x:Name="senha"
                    IsPassword="True"
                    Placeholder="Digite sua senha" />
            </VerticalStackLayout>
            <HorizontalStackLayout
                Margin="0,20,0,0"
                HorizontalOptions="End"
                Spacing="10">
                <Button Clicked="Salvar" Text="Salvar" />
                <Button Clicked="Limpar" Text="Limpar" />
                <Button Clicked="Novo" Text="Ver Pessoas" />
            </HorizontalStackLayout>


        </StackLayout>
    </ScrollView>

</ContentPage>